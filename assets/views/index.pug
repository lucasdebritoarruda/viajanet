doctype html
html(lang="en")
	head
		meta(charset="utf-8")
		title ViajaNet - Passagens Aéreas com economia garantida!
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous")
		link(rel='stylesheet', href='main.css')
		script(defer='', src='https://use.fontawesome.com/releases/v5.0.9/js/all.js', integrity='sha384-8iPTk2s/jMVj81dnzb/iFR2sdA7u06vHJyyLlAd4snFpCl/SnyUjRrbdJsw1pGIl', crossorigin='anonymous')
	body(data-spy="scroll" data-target=".bs-docs-sidebar")
		.navbar
			.navbar-header
				a.navbar-brand(href='#')
					img(src='./img/logo.svg')
		.box
			.container
				ul.nav.nav-tabs
					li.active
						a
							i.fas.fa-plane
							strong  Passagens Aéreas
					li
						a
							i.fas.fa-suitcase
							strong  Pacotes
					li
						a 
							i.fas.fa-car
							strong  Carros
				.searchField(ng-controller = "searchCtrl as self" ng-app = "viajaNetApp").column
					.radioField
						label.radio-inline
							input(type="radio")
							| Só ida
						label.radio-inline
							input(type="radio")
							| Ida e volta
						label.radio-inline
							input(type="radio")
							| Vários destinos
					.line
						.column.block
							label Informe sua origem:
							input.form-control(type='text' list='locations' automplete = "on")
							datalist(id='locations')
								option(ng-repeat = "location in self.locations" value="{{ location }}")
						.column.block
							label Informe seu destino:
							input.form-control(type='text' list='locations')
							datalist(id='locations')
								option(ng-repeat = "location in self.locations" value="{{ location }}")
					.line.divider
						.dateHalf
							.column.block
								label Data de ida:
								input.form-control(type='date')
							.column.block
								label Data de volta
								input.form-control(type='date')
						.quantHalf
							.column.block
								label Adultos
								select.form-control
									option 1 adulto
									option 2 adultos
									option 3 adultos
									option 4 adultos
									option 5 adultos
									option 6 adultos
									option 7 adultos
									option 8 adultos
									option 9 adultos
									option 10 adultos
							.column.block
								label Crianças
								select.form-control
									option Nenhuma
									option 1 criança
									option 2 crianças
									option 3 crianças
									option 4 crianças
									option 5 crianças
									option 6 crianças
									option 7 crianças
									option 8 crianças
									option 9 crianças
							.column.block
								label Bebês
								select.form-control
									option Nenhuma
									option 1 bebê
									option 2 bebês
									option 3 bebês
									option 4 bebês
									option 5 bebês
									option 6 bebês
									option 7 bebês
									option 8 bebês
									option 9 bebês
					.checkboxes
						label.checkbox-inline
							input(type='checkbox')
							| Ainda não sei as datas das viagens
						label.checkbox-inline
							input.fix(type='checkbox')
							| Adicionar hotel
							span.label.label-success COMPRE JUNTO E ECONOMIZE ATÉ 30%
					.opcoes
						p - Opções de busca	
						.dateHalf
							.column.block
								label Horário de ida
								select.form-control
									option Qualquer
									option Manhã
									option Tarde
									option Noite
									option Madrugada
							.column.block
								label Horário de volta
								select.form-control
									option Qualquer
									option Manhã
									option Tarde
									option Noite
									option Madrugada
							.column.block
								label Classe
								select.form-control
									option Qualquer
						.dateHalf
							label.checkbox-inline
								input(type='checkbox')
								| Ainda não sei as datas das viagens
						.btnHalf
							button.btn.btn-warning 
								i.fas.fa-search
								| Pesquisar
	script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous")
	script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous")
	script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.5/angular.js")
	script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.5/angular-animate.min.js")
	script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.5/angular-route.min.js")
	script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.5/angular-aria.min.js")
	script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.5/angular-messages.min.js")
	script(src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.1/moment.js")
	script(src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/t-114/svg-assets-cache.js")
	script(src="https://cdn.gitcdn.link/cdn/angular/bower-material/v1.1.12/angular-material.js")
	script(src="./js/app.js")
